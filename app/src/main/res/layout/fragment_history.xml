<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_main"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/movieArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Phim"
            style="@style/text_style_16"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đã xem"
            style="@style/text_style_16"
            android:textSize="22sp"
            />
    </LinearLayout>
    <!--  history  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewHistoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        app:layout_constraintTop_toBottomOf="@+id/movieArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_max="400dp"
        />
    <LinearLayout
        android:id="@+id/movieArea2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/recycleViewHistoryList"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Xem"
            style="@style/text_style_16"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sau"
            style="@style/text_style_16"
            android:textSize="22sp"
            />
    </LinearLayout>
    <!--  history  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewLaterMovieList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        app:layout_constraintTop_toBottomOf="@+id/movieArea2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_max="400dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>