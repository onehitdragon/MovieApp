<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:orientation="vertical"
    android:background="@color/black_main">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:name="com.example.finalapp.view.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <!--  menu  -->
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:id="@+id/wrapBtnHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha="1"
            android:background="@drawable/shadow">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/home_on"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@drawable/dot_on"
                android:visibility="visible"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/wrapBtnHistory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha="0.4">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/history_on" />
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@drawable/dot_on"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/wrapBtnDownload"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha="0.4">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/download_on" />
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@drawable/dot_on"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/wrapBtnUser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha="0.4">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/user_on" />
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@drawable/dot_on"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>