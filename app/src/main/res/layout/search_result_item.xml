<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textViewNameMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thám tử lừng danh conan"
        style="@style/text_style_16"
        android:textColor="#FFC107"/>
    <TextView
        android:id="@+id/textViewEngName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Super Dragon Balls Heroes: Big Bang(2021)"
        style="@style/text_style_16"
        android:textColor="@color/white_press"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#34FFFFFF"/>
</LinearLayout>