<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="movie"
            type="com.example.finalapp.model.Movie"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.MovieIntroFragment"
        android:background="@color/black_main"
        android:orientation="vertical">
        <!--  into bar  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <!--  button  -->
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/transparent"
                android:rotation="180">
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_design_2"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/next_icon"
                    android:layout_gravity="center"
                    android:translationZ="10dp"
                    android:layout_marginRight="-2.1dp"/>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <!--  time  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/clock_icon"/>
                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_style_16"
                    android:text="@{movie.movieLength + ` phút`}"
                    android:textColor="#FFC107"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <!--  release year  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/product_icon"/>
                <TextView
                    android:id="@+id/textViewYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_style_16"
                    android:text="@{movie.releaseYear + ``}"
                    android:textColor="#FFC107"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <!--  rating  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/star_icon"/>
                <TextView
                    android:id="@+id/textViewRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_style_16"
                    android:text="@{movie.rating + ``}"
                    android:textColor="#FFC107"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--  content area  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--  main  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp">
                    <!--  content-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="350dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="15dp"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="@color/transparent">
                            <ImageView
                                android:id="@+id/imageViewAvatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/textViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            style="@style/text_style_16"
                            android:text="@{movie.title}"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="#FFC107"/>
                        <TextView
                            android:id="@+id/textViewEngTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@{movie.engTitle}"
                            style="@style/text_style_16"
                            android:textColor="@color/white_press"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycleViewGenreOfMovie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="Giới thiệu"
                            style="@style/text_style_16"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FFC107"
                            />
                        <TextView
                            android:id="@+id/textViewContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{movie.content}"
                            style="@style/text_style_16"
                            android:textColor="@color/white_press"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <!--  button  -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:translationY="-5dp">
                <Button
                    android:id="@+id/btnWatchMovie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_design_0"
                    android:text="Xem ngay"
                    android:textAllCaps="false"
                    style="@style/text_style_16"
                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>
</layout>